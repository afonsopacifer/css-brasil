@keyframes enterCircle {
	25% {
		transform: scale(0.3) translateY(0);
	}

	40% {
		transform: scale(1);
	}

	45% {
 		transform: translateY(-2rem);
	}

	50%, 100% {
		transform: translateY(0);
	}
}

@keyframes flag {
	0% {
		width:0;
		border-radius: 0;
	}

	80% {
		width: 100%;
		border-radius: 0;
	}

	100% {
		width: 100%;
		border-radius: 50% 50% / 39px 38px;
	}
}

@keyframes cssCodeLeft {
	from {
		opacity: 1;
		visibility: visible;
		transform: translateX(0);
	}

	to {
		opacity: 1;
		visibility: visible;
		transform: translateX(-8rem);
	}
}

@keyframes cssCodeRight {
	from {
		opacity: 1;
		visibility: visible;
		transform: translateX(0);
	}

	to {
		opacity: 1;
		visibility: visible;
		transform: translateX(8rem);
	}
}

@keyframes flipLogoContainer {
	to {
		transform(rotateY(-180deg) scale(0))
	}
}